{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=StudentStudyAI;Uid=root;Pwd=test;Port=3306;SslMode=None;AllowPublicKeyRetrieval=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenAI": {
    "ApiKey": "mock-key",
    "BaseUrl": "https://api.openai.com/v1",
    "Models": {
      "Guest": "gpt-5-nano",
      "Authenticated": "gpt-5"
    },
    "MaxTokens": 2000,
    "Temperature": 0.7
  },
  "FileUpload": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [
      ".pdf",
      ".txt",
      ".docx",
      ".pptx",
      ".jpg",
      ".jpeg",
      ".png"
    ],
    "UploadPath": "uploads"
  },
  "FileStorage": {
    "Path": "uploads"
  },
  "Tesseract": {
    "DataPath": "tessdata"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "StudentStudyAI",
    "Audience": "StudentStudyAI",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
